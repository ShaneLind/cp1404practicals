BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            multiline: False
            on_text_validate: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_up(input_number.text)
            Button:
                text: 'Down'
                on_press: app.handle_down(input_number.text)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_number.text)
    Label:
        id: output_label
        text: app.message
