BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            multiline: False
            on_text: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_conversion(input_number.text)
    Label:
        id: output_label
        text: app.message
